---
/* Este archivo representa el menú flotante con enlaces y un botón para alternar el tema */
const menuItems = [
  { href: "/", label: "Home", icon: "home" },
  { href: "/blog", label: "Blog", icon: "notebook" },
  { href: "https://github.com/your-profile", label: "GitHub", icon: "github" },
  { href: "https://linkedin.com/in/your-profile", label: "LinkedIn", icon: "linkedin" },
  { href: "https://youtube.com/your-channel", label: "YouTube", icon: "youtube" },
];
---

<div class="fixed bottom-4 left-1/2 transform -translate-x-1/2 z-50 flex items-center space-x-4 bg-background p-2 rounded-full shadow-md border border-gray-200 dark:border-gray-700 dark:bg-gray-900">
  {menuItems.map((item) => (
    <a
      href={item.href}
      aria-label={item.label}
      class="flex items-center justify-center w-10 h-10 text-gray-700 transition-colors bg-gray-100 rounded-full hover:bg-accent hover:text-accent-foreground dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
    >
      <svg class="w-6 h-6">
        <use href={`#icon-${item.icon}`} />
      </svg>
    </a>
  ))}
  <div class="w-[1px] h-10 bg-gray-300 dark:bg-gray-700"></div>
  <button
    aria-label="Toggle theme"
    class="flex items-center justify-center w-10 h-10 text-gray-700 transition-colors bg-gray-100 rounded-full hover:bg-accent hover:text-accent-foreground dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
    <svg
      class="hidden w-5 h-5 dark:block"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
    >
      <path d="M12 3a9 9 0 0 0 0 18 9 9 0 1 1 0-18zm1 17.93V5a7.94 7.94 0 0 1 0 15.93z" />
    </svg>
    <svg
      class="block w-5 h-5 dark:hidden"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
    >
      <path
        d="M12 6.5A5.5 5.5 0 0 1 12 17.5 5.5 5.5 0 0 1 12 6.5zm0-2A7.5 7.5 0 0 0 12 19.5 7.5 7.5 0 0 0 12 4.5z"
      />
    </svg>
  </button>
</div>

<!-- Íconos SVG como referencia -->
<svg xmlns="http://www.w3.org/2000/svg" style="display:none;">
  <symbol id="icon-home" viewBox="0 0 24 24">
    <path d="M3 9L12 2l9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
    <polyline points="9 22 9 12 15 12 15 22" />
  </symbol>
  <symbol id="icon-notebook" viewBox="0 0 24 24">
    <path d="M2 6h4M2 10h4M2 14h4M2 18h4" />
    <rect width="16" height="20" x="4" y="2" rx="2" />
    <path d="M16 2v20" />
  </symbol>
  <symbol id="icon-github" viewBox="0 0 438.549 438.549">
    <!-- Contenido de GitHub Icon -->
  </symbol>
  <symbol id="icon-linkedin" viewBox="0 0 24 24">
    <!-- Contenido de LinkedIn Icon -->
  </symbol>
  <symbol id="icon-youtube" viewBox="0 0 32 32">
    <!-- Contenido de YouTube Icon -->
  </symbol>
</svg>
